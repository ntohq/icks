---
import BaseLayout from './BaseLayout.astro'

export interface Props {
	title: string;
	contentType: string;
	description: string;
	image: string;
}

const { 
	title,
	contentType = "website",
    description,
    image
 } = Astro.props as Props;
---

<BaseLayout {title} {contentType} {description} {image}>
	<main class="flex-1 flex flex-col">
		<slot />
	</main>
</BaseLayout>